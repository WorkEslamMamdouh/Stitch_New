<style>

    textarea {
        width: 100%;
        font-weight: bold;
    }

    .active {
        /*background-color: white;*/
        font-weight: bold;
    }

    .actTab {
        background-color: #ebebeb !important;
        font-weight: bold;
        border-radius: 19px 19px 0 0;
        cursor: pointer;
    }

    .nav-item {
        cursor: pointer !important;
    }

    /* width */
    ::-webkit-scrollbar {
        width: 10px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: #888;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }


    .Add {
        font-size: 23px !important;
        color: wheat;
    }

    .display_none {
        display: none !important;
    }

    .backposition {
        position: absolute;
        left: 0% !important;
        top: 0% !important;
        z-index: 99999 !important;
    }

    .Refreshposition {
        position: absolute;
        right: 1%;
        top: 12.5%;
        z-index: 99999 !important;
    }

    .Respon_width {
        width: 30%;
        font-size: 25px;
    }


    html, body.materialdesign {
        background: #ebebeb;
    }


    a {
        color: #02a9a9 !important;
    }
</style>
